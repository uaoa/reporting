{
	"manifest_version": 3,
	"name": "Reporting Commits Tracker",
	"version": "1.0.3",
	"description": "Track commits from GitHub and Azure DevOps, manage work items, and map tickets for reporting days",
	"permissions": ["storage", "contextMenus"],
	"host_permissions": [
		"https://rep.smartcloud.com.ua/*",
		"https://api.github.com/*",
		"https://dev.azure.com/*"
	],
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "background/background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://rep.smartcloud.com.ua/*"],
			"js": ["content/content.js"],
			"run_at": "document_idle",
			"all_frames": true
		}
	],
	"options_ui": {
		"page": "options/options.html",
		"open_in_tab": true
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
